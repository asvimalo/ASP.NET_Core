
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/lib/bootswatch/yeti/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

</head>
<body>
    <div id="sidebar">
        <div id="logo"><img alt="yo" src="~/img/gec.jpg" class="headshot" /></div>

        <ul class="nav">
            <li class="active"><a asp-controller="Gec" asp-action="Index">Noticias <i class="glyphicon glyphicon-globe"></i></a></li>
            <li><a asp-controller="Blog" asp-action="Index">Blog <i class="fa fa-newspaper-o"></i></a></li>
            <li><a asp-controller="Gec" asp-action="Historia">O Gec <i class="fa fa-leaf"></i></a></li>
            <li><a asp-controller="Playground" asp-action="Index">Playground <i class="fa fa-play-circle"></i></a></li>
            <li><a asp-controller="Gec" asp-action="Contact">Contacte <i class="glyphicon glyphicon-send"></i></a></li>
            <li><a asp-controller="Account" asp-action="Login"><i class="fa fa-user-circle"></i> <i class="glyphicon glyphicon-log-in"></i></a></li>
        </ul>
    </div>

    <div id="wrapper">
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <ul class="nav navbar-nav navbar">
                    <li>
                        <div id="buttonMenu">
                            <button id="sidebarToggle" class="btn btn-sm" type="button">
                                <i class="fa fa-angle-left"></i>
                            </button>
                        </div>
                    </li>
                </ul>
                <a asp-controller="Playground" asp-action="Index" class="navbar-brand">gec</a>
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="#" class="btn btn-sm btn-info"><i class="fa fa-save">Save</i></a>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="#" class="btn btn-sm btn-info"><i class="fa fa-print">Print</i></a>
                    </li>
                </ul>
            </div>
        </nav>
        <div id="main" class="container-fluid">
            <div>
                @RenderBody();
            </div>
        </div>
        <div id="footer" class="container-fluid">
            <div class="navbar navbar-inverse navbar navbar-fixed-bottom">
                <p>&copy; 2017 <a class="text-success" href="http://www.gec.pt">gec grupo ecológico de Cascais</a></p>
            </div>
        </div>
    </div>

    <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/js/site.js"></script>
    @RenderSection("scripts", false);

</body>
</html>