
<div class="row">
    <div class="col-md-6">
        <h2>Playground</h2>

        <form>
            <div class="form-group">
                <label>Date</label>
                <input class="form-control" />
            </div>
            <div class="form-group">
                <label>Location</label>
                <input class="form-control" />
            </div>
            <div><input type="submit" value="Add" class="btn btn-success form-control" /></div>
        </form>
    </div>
    <div class="col-md-6">
        <h2>The Map</h2>
        <ul>
            @foreach (var trip in Model)
            {
                <li>@trip.Name : @trip.DateCreated.ToString("d")</li>
            }
        </ul>
    </div>
</div>